<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox fx:controller="controller.Flights.ModifyFlightsController" alignment="CENTER" styleClass="background" prefHeight="200.0" prefWidth="200.0" spacing="20" xmlns:fx="http://javafx.com/fxml/1">
    <ImageView fx:id="flightsBackgroundImg" />
<Separator/>
<HBox alignment="CENTER" styleClass="heading" prefHeight="100.0" prefWidth="100.0" xmlns:fx="http://javafx.com/fxml/1">
    <Label text= "Add a Flight" styleClass="heading" />  
</HBox>
<Separator/>
<GridPane alignment="CENTER" styleClass="background" prefHeight="200.0" prefWidth="200.0" xmlns:fx="http://javafx.com/fxml/1">
        <Label text="Airline:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="airlineTf" GridPane.columnIndex="1" GridPane.rowIndex="0"/> 
        <Label text="Flight Number:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
        <TextField fx:id="flightNoTf" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        <Label text="Takeoff:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <TextField fx:id="addTakeoffTf" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Landing:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <TextField fx:id="addLandingTf" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
        <Label text="Cost:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
        <TextField fx:id="costTf" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
</GridPane>
<HBox alignment="CENTER" prefHeight="250.0" prefWidth="250.0" xmlns:fx="http://javafx.com/fxml/1">
        <Button prefWidth="1000" fx:id="addFlightBtn" text="Add Flight" onAction="#handleAddFlight" styleClass="button"/>
        <!-- <Separator/> -->
        <Button prefWidth="1000" fx:id="closeAddFlightBtn" text="Close" onAction="#handleCloseAddFlights" styleClass="button"/>
</HBox>
    <stylesheets>
          <URL value="@style.css"/>
     </stylesheets>
</VBox>
